{
  "name": "portfolio-2022",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{ts,tsx,js,md}\"",
    "check-format": "prettier --list-different \"**/*.{ts,tsx,js,md}\""
  },
  "devDependencies": {
    "@portfolio-2022/eslint-config-custom": "workspace:*",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.14.0"
}
